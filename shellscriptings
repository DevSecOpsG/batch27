#!/bin/bash 
echo "Hello batch27 students"
echo "My name is $(whoami)"
echo "Nice to meet you"

-------------

#!/bin/bash  
echo "This is a monitoring shell script"
echo "the hostname of this machine is "
hostname 
hostname -i
echo "*******************************************"
ps
echo "*******************************************"
echo "memory used in the machine "
free
echo "*******************************************"
echo "disk used in the machine "
df -h
echo "*******************************************"
echo "the monitoring above information from the machine"  
SOMEVAR='my shellscript in batch27 learning devops'  
echo "$SOMEVAR"

-----------------

#!/bin/bash
# Add two numeric value
((sum=10-5))
#Print the result
echo $sum


